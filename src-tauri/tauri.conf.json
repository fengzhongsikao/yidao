{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yidao",
  "version": "0.1.3",
  "identifier": "com.bilibili",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yidao",
        "width": 850,
        "height": 620
      }
    ],
    "security": {
      "csp":  "default-src 'self' 'unsafe-eval' 'unsafe-inline' data: blob:; connect-src 'self' https://www.36jxs.com/* http://localhost:3000"
    }
  },
  "bundle": {
    "resources": {
      "assets/": ""
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
